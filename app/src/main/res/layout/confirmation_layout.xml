<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure want to Recharge?"
        android:textSize="16sp"
        style="@style/TextAppearance.AppCompat.Body1"
        android:gravity="center"/>
    <TextView
        android:id="@+id/confirm_retailer"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Vodafone"
        style="@style/TextAppearance.AppCompat.Body2"
        android:textSize="16sp"
        android:textColor="#00c853"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView2"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Number "
            />
        <TextView
            android:id="@+id/confirm_number"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            style="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#00c853"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="9474931174" />

    </LinearLayout>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="With"
          style="@style/TextAppearance.AppCompat.Body1"
          android:gravity="center"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center">
       <TextView
           android:id="@+id/textView5"
           style="@style/TextAppearance.AppCompat.Body1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Amount: " />

       <TextView
           android:id="@+id/confirm_amount"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           style="@style/TextAppearance.AppCompat.Body2"
           android:textColor="#00c853"
           android:textSize="16sp"
           android:gravity="center"
           tools:text="10" />
   </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content">
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/cancel_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="8dp"
            android:paddingRight="20dp"
            android:layout_gravity="start"
            android:paddingBottom="8dp"
            android:layout_marginStart="35dp"
            android:text="Cancel"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="@color/colorPrimaryDark"
            fancy:fb_focusColor="@color/colorPrimaryDark"
            fancy:fb_radius="30dp"
            tools:layout_editor_absoluteX="120dp"
            tools:layout_editor_absoluteY="185dp" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="8dp"
            android:paddingRight="20dp"
            android:layout_marginEnd="35dp"
            android:paddingBottom="8dp"
            android:layout_alignParentEnd="true"
            android:text="Confirm"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="@color/colorPrimaryDark"
            fancy:fb_focusColor="@color/colorPrimaryDark"
            fancy:fb_radius="30dp"
            tools:layout_editor_absoluteX="309dp"
            tools:layout_editor_absoluteY="185dp" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/tc_recharge"
        android:gravity="center"/>
</LinearLayout>

